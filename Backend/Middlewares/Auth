import jwt from 'jsonwebtoken';

const ensureAuthentication = (req, res, next) => {
   const authHeader = req.headers['authorization'];
    if (!authHeader) {
        return res.status(403).json({ message: 'alt Unauthorized: JWT Token required' });
    }

    // Extract the token from the 'Bearer <token>' format
    const token = authHeader.split(' ')[1]; 
    if (!token) {
        return res.status(403).json({ message: 'BEARER Unauthorized: JWT Token required' });
    }

    try {
        const decoded = jwt.verify(token, process.env.JWT_SECRET);
        req.user = decoded;
        next();
    } catch (error) {
        return res.status(403).json({ message: 'SAD Unauthorized: Invalid JWT Token' });
    }
};

export { ensureAuthentication };